@page
@model RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}



        <form class="form form_reg" id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <h1 class="title-1">@ViewData["Title"]</h1>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input placeholder="Введите почту" asp-for="Input.Email" class="form-input" autocomplete="username" aria-required="true" />
        <span class="form-span" asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input placeholder="Введите пароль" asp-for="Input.Password" class="form-input" autocomplete="new-password" aria-required="true" />
        <span class="form-span" asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input placeholder="Введите пароль повторно" asp-for="Input.ConfirmPassword" class="form-input" autocomplete="new-password" aria-required="true" />
                <span class="form-span" asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
    <div class="form-group">
        <input placeholder="Должность" asp-for="Input.ConfirmPassword" class="form-input" type="text" aria-required="true" />
        <span class="form-span" asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input placeholder="Стаж" asp-for="Input.ConfirmPassword" class="form-input" type="text" aria-required="true" />
        <span class="form-span" asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div>
            <button id="registerSubmit" type="submit" class="form-btn form-btn_submit">Продолжить</button>
        </form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
