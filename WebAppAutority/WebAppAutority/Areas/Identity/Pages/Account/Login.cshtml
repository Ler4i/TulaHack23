@page
@model LoginModel

@{
    ViewData["Title"] = "Вход";
}
        <section>
            <form class="form" id="account" method="post">
        <h1 class="title-1">@ViewData["Title"]</h1>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input placeholder="Введите почту" asp-for="Input.Email" class="form-input" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input placeholder="Введите пароль" asp-for="Input.Password" class="form-input" autocomplete="current-password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-item">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-checkbox-label">
                            <input class="form-checkbox" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
            <button id="login-submit" type="submit" class="form-btn form-btn_submit">Войти</button>
                </div>
                <div>
                    <p>
                        <a class="form-span" id="forgot-password" asp-page="./ForgotPassword">Забыли пароль?</a>
                    </p>
                    <p class="form-btn">
                        <a class="form-a" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Зарегестрироваться</a>
                    </p>
                    <p class="form-btn">
                        <a class="form-a" id="resend-confirmation" asp-page="./ResendEmailConfirmation">Отправить письмо повторно</a>
                    </p>
                </div>
            </form>
        </section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
